<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Venus">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/background_venus"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vênus"
        android:textColor="#FF0000"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Vênus, muitas vezes chamado de irmão gêmeo da Terra devido às suas semelhanças em tamanho e composição, é outro mundo no Sistema Solar que não possui luas. Enquanto a Terra desfruta da companhia da Lua, Vênus orbita o Sol solitário, sem satélites naturais para iluminar suas noites ou influenciar suas marés."
        android:textAlignment="textStart"
        android:textColor="#FF0000"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="A ausência de luas em Vênus não diminui sua importância na exploração espacial. Este planeta, envolto em uma atmosfera densa de dióxido de carbono e sufocado por temperaturas escaldantes, ainda guarda muitos segredos a serem desvendados. Missões espaciais, como a sonda Vênus Express da Agência Espacial Europeia e futuras missões planejadas, estão empenhadas em revelar os mistérios da atmosfera venusiana, sua geologia e possíveis sinais de atividade vulcânica."
        android:textAlignment="textStart"
        android:textColor="#FF0000"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>