<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mercurio">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_mercurio" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:text="Mércurio"
        android:textColor="#FF0000"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Mercúrio, o menor planeta do Sistema Solar e o mais próximo do Sol, tem uma característica peculiar: ele não possui luas. Sua órbita íngreme e proximidade com o Sol dificultam a retenção de satélites naturais. Apesar de sua ausência de luas, Mercúrio é um mundo fascinante, com uma superfície repleta de crateras, falésias e planícies vulcânicas."
        android:textAlignment="textStart"
        android:textColor="#FF0000"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Essa falta de luas contrasta com outros planetas do Sistema Solar, como a Terra, que tem a Lua como companheira, e Júpiter, com suas dezenas de satélites naturais. No entanto, essa singularidade não diminui a importância de Mercúrio como objeto de estudo. A exploração da sonda MESSENGER, por exemplo, proporcionou informações valiosas sobre a geologia e a composição deste planeta rochoso."
        android:textAlignment="textStart"
        android:textColor="#FF0000"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>